<h1>Delivery</h1>
<%= form_for @order do |f| %>
	<% if @order.errors.any? %>
		<div class="error_messages">
			<h3>Form is invalid</h3>
			<ul>
				<% for message in @order.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :name %>
	</div>
	<div class="field">
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :street %>
	</div>
	<div class="field">
		<%= f.text_field :street %>
	</div>
	<div class="field">
		<%= f.label :city %>
	</div>
	<div class="field">
		<%= f.text_field :city %>
	</div>
	<div class="field">
		<%= f.label :zip_code %>
	</div>
	<div class="field">
		<%= f.text_field :zip_code %>
	</div>
	<div class="actions"><%= f.submit %></div>
<% end %>