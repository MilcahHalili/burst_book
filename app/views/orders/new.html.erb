<h1>CHECKOUT</h1>
<%= form_for @order, {url: checkout_path} do |f| %>
	<div class="field">
		<%= f.label :name %>
	</div>
	<div class="field">
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :street %>
	</div>
	<div class="field">
		<%= f.text_field :street %>
	</div>
	<div class="field">
		<%= f.label :city %>
	</div>
	<div class="field">
		<%= f.text_field :city %>
	</div>
	<div class="field">
		<%= f.label :state %>
	</div>
	<div class="field">
		<%= f.text_field :state %>
	</div>
	<div class="field">
		<%= f.label :zip_code %>
	</div>
	<div class="field">
		<%= f.text_field :zip_code %>
	</div>
	<div class="field">
		<%= f.label :special_instructions %>
	</div>
	<div class="field">
		<%= f.text_field :special_instructions %>
	</div>
	<div class="actions">
		<%= f.submit "SUBMIT", :class => "button" %>
	</div>
<% end %>