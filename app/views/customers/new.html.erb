<h1>CREATE YOUR ACCOUNT</h1>
<%= form_for @customer do |f| %>
	<% if @customer.errors.any? %>
		<div class="error_messages">
			<h3>Form is invalid</h3>
			<ul>
				<% for message in @customer.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :name %>
	</div>
	<div class="field">
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %>
	</div>
	<div class="field">
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %>
	</div>
	<div class="field">
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %>
	</div>
	<div class="last-field">
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions"><%= f.submit "SIGN UP", :class => "button" %></div>
<% end %>