<!DOCTYPE html>
<html>
  <head>
    <title>BurstBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
  <span class="leftnav">
    <%= link_to 'CREATE A BOOK', new_book_path %>
  </span>
  <span class="customer-name">
    <% if current_customer %>
      <%= current_customer.name %>
  </span>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to 'CART', '/orders/cart' %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to 'LOG OUT', session_path('dummy'), method: :delete %>
    <% else %>
      <span class="newsession"><%= link_to 'LOG IN', login_path %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to 'SIGN UP', new_customer_path %></span>
    <% end %>
  </nav>
    <%= yield %>
  <footer>
    <div>
      <% if current_customer %>
        <%= link_to 'CART', '/orders/cart' %>
        &nbsp;&nbsp;&nbsp;&nbsp;
      <% end %>
        <%= link_to 'ABOUT', "/about" %>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to 'HOME', root_path %>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to 'FAQ', '/faq' %>
    </div>
  </footer>
  </body>
</html>
